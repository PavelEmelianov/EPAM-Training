<!--============================================================
	Context listener
=============================================================-->
	<listener>
		<listener-class>ua.nure.your_last_name.SummaryTask4.web.listener.ContextListener</listener-class>
	</listener>
	
<!--============================================================
	Error page
=============================================================-->
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error_page.jsp</location>
	</error-page>
</web-app>